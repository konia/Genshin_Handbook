// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  password        String
  role            Role      @default(USER)
}
model Character {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  card            String
  cover           String
  star            String
  characterVoice  String[] 
  avatar          String
  weapon          String
  region          String

  constellation   String    // 命之座
  vision          String    // 神之眼
  affiliation     String    //所属
  title           String    //称号
  birthday        String
}

enum Role {
  USER
  ADMIN
}