// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String
  password        String
  role            Role      @default(USER)
}
model Character {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  star            String
  characterVoice  String[]
  weapon          String
  region          String

  constellation   String
  vision          String
  affiliation     String
  title           String
  birthday        String
}

enum Role {
  USER
  ADMIN
}