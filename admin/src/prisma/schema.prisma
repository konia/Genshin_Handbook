// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  userId        String        @default(uuid()) @db.ObjectId
  name          String
  email         String        @unique
  password      String
  role          Role          @default(USER)

  @@map("users")
}

model Character {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  label         String
  description   String
  avatar        String
  movieIDs      String[]      @db.ObjectId
  movies        Movie[]       @relation(fields: [movieIDs], references: [id])

  @@map("characters")
}

model Movie {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  date          DateTime
  characterIDs  String[]       @db.ObjectId
  characters    Character[]    @relation(fields: [characterIDs], references: [id])

  @@map("movies")
}

enum Role {
  USER
  ADMIN
}