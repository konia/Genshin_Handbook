// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String    @default(uuid()) @db.ObjectId
  name            String
  email           String    @unique
  password        String
  role            Role      @default(USER)
}
model Character {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  description     String
  post            String
  slogen          String
  vision          String // 神之眼
  quality         String
  characterVoice  String[]
  voice           String[]
  avatar          String
  weapon          String
  tags            String[]
  profile         Profile?
  region          Region    @relation(fields: [regionId], references: [id])
  regionId        String @db.ObjectId
}

model Profile {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  character       Character @relation(fields: [characterId], references: [id])
  characterId     String    @unique @db.ObjectId
  constellation   String    // 命之座
  vision          String    // 神之眼

  affiliation     String    //所属
  title           String    //称号
  birthday        String
  avatar          String
  card            String
  cover           String
}

model Region {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  characters      Character[]
}

enum Role {
  USER
  ADMIN
}